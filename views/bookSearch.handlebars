<div>
  <h1>Book Search Page</h1>
  <p>Search for a book here.</p>
  <form id="search-book-form">
    <input type="text" id="search-query" placeholder="Enter book title, author, or topic" />
    <button type="submit" id="search">Search</button>
  </form>
</div>
<p>
  <hr /> {{!-- Hyper Rule --}}
</p>

<h2>Search Results</h2>
<div id="book-search-results">Search results will appear here</div>
<p>
  <hr /> {{!-- Hyper Rule --}}
</p>
<div>
  <h2>Previous Reviews</h2>
</div>

{{#if reviews}}
  {{#each reviews}}
    <div style="border: 1px solid black;" id="bookReview">
      <img src="{{thumbnail}}" alt="{{title}}" />
      <h2>Title: {{title}}</h2>
      <p>Review by
        {{#if username}}
          {{user.username}}
        {{else}}
          Anonymous
        {{/if}}
        on {{formatDate createdAt}}
      </p>
      <p>
        {{!-- this is the body of a review --}}

        {{body}}
      </p>
      <span id="container" style="display: flex; align-items: center;">
        <button id="delete-review" data-id="{{_id}}">Delete this Review</button>&nbsp;&nbsp;&nbsp;
        Add to Favorites: &nbsp;
        <!-- Rounded switch uses css -->
        <label class="switch">
          <input type="checkbox" id="toggleSwitch">
          <span class="slider round"></span>
        </label>
      </span>
    </div>
    <p>&nbsp;</p>
  {{/each}}
{{else}}
  <p>No reviews found.</p>
{{/if}}

<script src="js/bookSearch.js"></script>
